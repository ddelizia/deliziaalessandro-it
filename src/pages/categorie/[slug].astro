---
import { cn } from "@/lib/utils";
import { getCollection } from "astro:content";
import BrandCard from "../../components/BrandCard.astro";
import CTASection from "../../components/CTASection.astro";
import Footer from "../../components/Footer.astro";
import Header from "../../components/Header.astro";
import { buttonVariants } from "../../components/ui/button";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
    const categories = await getCollection("categories");
    categories.sort((a, b) => a.data.name.localeCompare(b.data.name));

    return categories.map((category, index) => ({
        params: { slug: category.slug },
        props: {
            category,
            prevCategory: index > 0 ? categories[index - 1] : null,
            nextCategory:
                index < categories.length - 1 ? categories[index + 1] : null,
        },
    }));
}

const { category, prevCategory, nextCategory } = Astro.props;
const { Content, headings } = await category.render();

const allBrands = await getCollection("brands");
const relatedBrands = allBrands.filter((brand) =>
    brand.data.categories?.includes(category.data.name),
);

// Function to get image path based on slug
const getImagePath = (slug: string) => {
    const imageMap: Record<string, string> = {
        "parquet-e-laminati": "parquet.jpg",
        "collanti-e-materiali-tecnici": "collanti.jpg",
        "infissi": "infissi.jpeg",
    };
    
    if (imageMap[slug]) {
        return `/images/categories/${imageMap[slug]}`;
    }
    return `/images/categories/${slug}.jpg`;
};
---

<Layout
    title={`${category.data.name} - Delizia Alessandro S.r.l.`}
    description={category.data.description}
>
    <Header />
    <main class="min-h-screen bg-background">
        <!-- Hero Section with Image -->
        <section class="relative bg-background">
            <div class="relative h-[35vh] min-h-[300px] overflow-hidden">
                <img
                    src={getImagePath(category.slug)}
                    alt={category.data.name}
                    class="absolute inset-0 w-full h-full object-cover"
                />
                <div class="absolute inset-0 bg-linear-to-b from-black/60 via-black/50 to-background" />
                <div class="container relative mx-auto px-4 h-full flex items-end pb-8">
                    <div class="max-w-4xl">
                        <a
                            href="/categorie"
                            class="inline-flex items-center gap-2 text-sm font-medium text-white/90 hover:text-white transition-colors mb-4 bg-white/10 backdrop-blur-sm px-4 py-2 border border-white/20"
                        >
                            <svg
                                class="w-4 h-4"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                                stroke-width="2"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M15 19l-7-7 7-7"></path>
                            </svg>
                            Tutte le categorie
                        </a>
                        <h1
                            class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-3"
                        >
                            {category.data.name}
                        </h1>
                        <p
                            class="text-lg text-white/90 leading-relaxed max-w-3xl"
                        >
                            {category.data.description}
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <section class="py-12 lg:py-20">
            <div class="container mx-auto px-4">
                <div class="flex flex-col lg:flex-row gap-12 max-w-6xl mx-auto">
                    <!-- Table of Contents (Desktop) -->
                    {
                        headings.length > 0 && (
                            <aside class="hidden lg:block w-64 shrink-0">
                                <div class="sticky top-32">
                                    <h4 class="font-semibold mb-4 text-sm uppercase tracking-wider text-muted-foreground">
                                        In questa pagina
                                    </h4>
                                    <nav class="flex flex-col gap-2 border-l border-border/50">
                                        {headings.map((heading) => (
                                            <a
                                                href={`#${heading.slug}`}
                                                class={`text-sm py-1 pl-4 border-l -ml-px transition-colors hover:text-primary ${
                                                    heading.depth === 2
                                                        ? "text-foreground font-medium border-transparent"
                                                        : "text-muted-foreground border-transparent pl-8"
                                                }`}
                                            >
                                                {heading.text}
                                            </a>
                                        ))}
                                    </nav>
                                    <div class="mt-8 pt-8 border-t border-border/50">
                                        <div class="p-4 bg-muted/50 rounded-xl">
                                            <p class="text-sm font-medium mb-3">
                                                Hai bisogno di aiuto?
                                            </p>
                                            <a
                                                href="/#contatti"
                                                class={cn(
                                                    buttonVariants({
                                                        size: "sm",
                                                    }),
                                                    "w-full",
                                                )}
                                            >
                                                Contattaci
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </aside>
                        )
                    }

                    <!-- Content -->
                    <article class="flex-1 min-w-0">
                        <!-- Mobile Table of Contents (Collapsible) -->
                        {
                            headings.length > 0 && (
                                <div class="lg:hidden mb-8">
                                    <button
                                        id="mobile-toc-toggle"
                                        class="w-full flex items-center justify-between p-4 bg-muted/50 border border-border/50 text-left font-medium text-sm hover:bg-muted transition-colors"
                                    >
                                        <span class="flex items-center gap-2">
                                            <svg
                                                class="w-5 h-5 text-muted-foreground"
                                                fill="none"
                                                viewBox="0 0 24 24"
                                                stroke="currentColor"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M4 6h16M4 12h16M4 18h16"
                                                />
                                            </svg>
                                            In questa pagina
                                        </span>
                                        <svg
                                            id="mobile-toc-icon"
                                            class="w-5 h-5 transition-transform"
                                            fill="none"
                                            viewBox="0 0 24 24"
                                            stroke="currentColor"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M19 9l-7 7-7-7"
                                            />
                                        </svg>
                                    </button>
                                    <div
                                        id="mobile-toc-content"
                                        class="hidden border-x border-b border-border/50 bg-background"
                                    >
                                        <nav class="flex flex-col p-4 gap-2">
                                            {headings.map((heading) => (
                                                <a
                                                    href={`#${heading.slug}`}
                                                    class={`text-sm py-2 transition-colors hover:text-primary mobile-toc-link ${
                                                        heading.depth === 2
                                                            ? "text-foreground font-medium"
                                                            : "text-muted-foreground pl-4"
                                                    }`}
                                                >
                                                    {heading.text}
                                                </a>
                                            ))}
                                        </nav>
                                    </div>
                                </div>
                            )
                        }
                        <div
                            class="prose prose-sm prose-slate dark:prose-invert max-w-none
                            prose-headings:scroll-mt-32
                            prose-h2:text-3xl prose-h2:font-bold prose-h2:tracking-tight prose-h2:mt-12 prose-h2:mb-6
                            prose-h3:text-2xl prose-h3:font-semibold prose-h3:mt-8 prose-h3:mb-4
                            prose-p:leading-relaxed prose-p:text-muted-foreground
                            prose-li:text-muted-foreground
                            prose-strong:text-foreground prose-strong:font-semibold
                            prose-img:rounded-xl prose-img:shadow-lg"
                        >
                            <Content />
                        </div>

                        <!-- Brands Grid for this Category -->
                        {
                            relatedBrands.length > 0 && (
                                <div class="mt-20 pt-12 border-t border-border/50">
                                    <h2 class="text-2xl font-bold mb-8">
                                        Marchi Trattati
                                    </h2>
                                    <div class="grid sm:grid-cols-2 gap-6">
                                        {relatedBrands.map((brand) => (
                                            <BrandCard brand={brand} />
                                        ))}
                                    </div>
                                </div>
                            )
                        }
                    </article>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <CTASection
            title="Realizza il tuo progetto con noi"
            description={`Vieni a trovarci nel nostro showroom per toccare con mano la qualitÃ  dei prodotti ${category.data.name} e ricevere una consulenza su misura.`}
            primaryText="Richiedi preventivo"
            secondaryText="Dove siamo"
        />

        <!-- Previous/Next Category Navigation -->
        <section class="py-8 border-t border-border/50 bg-muted/20">
            <div class="container mx-auto px-4">
                <div
                    class="flex flex-col sm:flex-row justify-between items-center gap-4 max-w-6xl mx-auto"
                >
                    {
                        prevCategory ? (
                            <a
                                href={`/categorie/${prevCategory.slug}`}
                                class="group flex items-center gap-3 text-muted-foreground hover:text-primary transition-colors text-sm font-medium"
                            >
                                <div class="p-2 rounded-full border border-border/50 bg-background group-hover:border-primary/50 transition-colors">
                                    <svg
                                        class="w-4 h-4"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M15 19l-7-7 7-7"
                                        />
                                    </svg>
                                </div>
                                <div class="text-left">
                                    <span class="block text-xs text-muted-foreground/70">
                                        Precedente
                                    </span>
                                    <span class="block text-foreground group-hover:text-primary transition-colors">
                                        {prevCategory.data.name}
                                    </span>
                                </div>
                            </a>
                        ) : (
                            <div />
                        )
                    }

                    <a
                        href="/categorie"
                        class="text-sm font-medium text-muted-foreground hover:text-primary transition-colors flex items-center gap-2"
                    >
                        <svg
                            class="w-4 h-4"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                        Tutte le categorie
                    </a>

                    {
                        nextCategory ? (
                            <a
                                href={`/categorie/${nextCategory.slug}`}
                                class="group flex items-center gap-3 text-muted-foreground hover:text-primary transition-colors text-sm font-medium text-right"
                            >
                                <div class="text-right">
                                    <span class="block text-xs text-muted-foreground/70">
                                        Successivo
                                    </span>
                                    <span class="block text-foreground group-hover:text-primary transition-colors">
                                        {nextCategory.data.name}
                                    </span>
                                </div>
                                <div class="p-2 rounded-full border border-border/50 bg-background group-hover:border-primary/50 transition-colors">
                                    <svg
                                        class="w-4 h-4"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M9 5l7 7-7 7"
                                        />
                                    </svg>
                                </div>
                            </a>
                        ) : (
                            <div />
                        )
                    }
                </div>
            </div>
        </section>
    </main>
    <Footer />

    <!-- Mobile TOC Toggle Script -->
    <script>
        const mobileToggle = document.getElementById("mobile-toc-toggle");
        const mobileContent = document.getElementById("mobile-toc-content");
        const mobileIcon = document.getElementById("mobile-toc-icon");
        const mobileLinks = document.querySelectorAll(".mobile-toc-link");

        if (mobileToggle && mobileContent && mobileIcon) {
            mobileToggle.addEventListener("click", () => {
                const isHidden = mobileContent.classList.contains("hidden");
                
                if (isHidden) {
                    mobileContent.classList.remove("hidden");
                    mobileIcon.style.transform = "rotate(180deg)";
                } else {
                    mobileContent.classList.add("hidden");
                    mobileIcon.style.transform = "rotate(0deg)";
                }
            });

            // Close TOC when a link is clicked
            mobileLinks.forEach((link) => {
                link.addEventListener("click", () => {
                    mobileContent.classList.add("hidden");
                    mobileIcon.style.transform = "rotate(0deg)";
                });
            });
        }
    </script>
</Layout>
