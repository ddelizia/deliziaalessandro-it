---
import {
    Card,
    CardContent,
    CardDescription,
    CardHeader,
    CardTitle,
} from "./ui/card";
import { cn } from "@/lib/utils";
import {
    Monitor,
    UserCheck,
    FileText,
    Truck,
    HeartHandshake,
    CreditCard,
    CircleParking,
    Layers,
    ArrowRight,
} from "lucide-react";

// Bento Grid Items Definition
const bentoItems = [
    {
        title: "Progettazione 3D & Rendering",
        description:
            "Visualizza il tuo nuovo bagno o pavimento in anteprima. Offriamo un servizio di progettazione d'interni avanzato per aiutarti a scegliere i migliori pavimenti, rivestimenti e arredo bagno.",
        icon: Monitor,
        className: "md:col-span-2 md:row-span-1", // Large Hero Tile
        keywords: ["Pavimenti", "Rivestimenti", "Arredo Bagno"],
        // gradient: "from-primary/10 to-primary/5",
    },
    {
        title: "Consulenza Gratuita",
        description:
            "I nostri esperti ti guidano nella scelta di sistemi di riscaldamento, condizionamento e solare termico efficienti.",
        icon: UserCheck,
        className: "md:col-span-1 md:row-span-1",
        keywords: ["Riscaldamento", "Condizionamento", "Solare Termico"],
    },
    {
        title: "Preventivi Gratuiti",
        description:
            "Richiedi un preventivo dettagliato per infissi, porte interne, portoni blindati e scale su misura.",
        icon: FileText,
        className: "md:col-span-1 md:row-span-1",
        keywords: ["Infissi", "Porte", "Scale"],
    },
    {
        title: "Vasto Assortimento",
        description:
            "Tutto ciò che serve per la tua casa: colori, vernici, decorazioni, camini, rubinetteria, vasche e docce.",
        icon: Layers,
        className: "md:col-span-1 md:row-span-2", // Tall Tile
        keywords: [
            "Colori",
            "Vernici",
            "Decorazioni",
            "Camini",
            "Rubinetteria",
        ],
    },
    {
        title: "Assistenza Post Vendita",
        description: "Supporto continuativo e garanzia su tutti i prodotti.",
        icon: HeartHandshake,
        className: "md:col-span-1 md:row-span-1",
    },
    {
        title: "Trasporto",
        description:
            "Consegna diretta in cantiere con mezzi propri di materiali tecnici, collanti e cementi.",
        icon: Truck,
        className: "md:col-span-2 md:row-span-1", // Wide Tile
        keywords: ["Materiali tecnici", "Collanti", "Cementi"],
    },
    {
        title: "Pagamenti Personalizzati",
        description: "Soluzioni finanziarie su misura per le tue esigenze.",
        icon: CreditCard,
        className: "md:col-span-1 md:row-span-1",
    },
    {
        title: "Ampi Parcheggi",
        description: "Comodo parcheggio riservato presso il nostro showroom.",
        icon: CircleParking,
        className: "md:col-span-1 md:row-span-1",
    },
];
---

<section id="servizi" class="py-20 lg:py-32 bg-background">
    <div class="container mx-auto px-4">
        <!-- Section Header -->
        <div class="text-center mb-16">
            <span
                class="inline-block text-primary font-semibold text-sm tracking-wider uppercase mb-4"
            >
                I Nostri Servizi
            </span>
            <h2
                class="text-3xl sm:text-4xl lg:text-5xl font-bold text-foreground mb-6"
            >
                Soluzioni Complete per l'Edilizia
            </h2>
            <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                Offriamo consulenza, progettazione e materiali di qualità per
                realizzare i tuoi progetti, dalla A alla Z.
            </p>
        </div>

        <!-- Bento Grid -->
        <div
            class="grid grid-cols-1 md:grid-cols-4 auto-rows-[minmax(180px,auto)] gap-4"
        >
            {
                bentoItems.map((item) => (
                    <Card
                        className={cn(
                            "group relative overflow-hidden transition-all duration-300 hover:shadow-xl hover:-translate-y-1 border-border/50 hover:border-primary/30 flex flex-col",
                            item.className,
                            item.gradient ? `bg-gradient-to-br ${item.gradient}` : "bg-card"
                        )}
                    >
                        <CardHeader className="relative z-10 pb-2">
                             <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center text-primary mb-4 group-hover:bg-primary group-hover:text-primary-foreground transition-colors">
                                <item.icon className="w-6 h-6" />
                            </div>
                            <CardTitle className="text-xl font-bold group-hover:text-primary transition-colors">
                                {item.title}
                            </CardTitle>
                        </CardHeader>
                        <CardContent className="relative z-10 flex-grow">
                            <CardDescription className="text-base text-muted-foreground leading-relaxed mb-4">
                                {item.description}
                            </CardDescription>
                            
                            {item.keywords && (
                                <div class="flex flex-wrap gap-2 mt-auto pt-4">
                                    {item.keywords.map((kw) => (
                                        <span class="inline-flex items-center text-xs font-medium text-primary/80 bg-primary/5 px-2 py-1 rounded-md">
                                            {kw}
                                        </span>
                                    ))}
                                </div>
                            )}

                             <!-- Decorative background icon equivalent -->
                            <div class="absolute -right-4 -bottom-4 opacity-0 group-hover:opacity-5 transition-opacity duration-300 scale-150 text-foreground pointer-events-none">
                                <item.icon className="w-40 h-40" />
                            </div>
                        </CardContent>
                    </Card>
                ))
            }
        </div>
    </div>
</section>
