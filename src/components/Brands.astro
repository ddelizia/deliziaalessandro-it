---
import { getCollection } from "astro:content";
import { Image } from 'astro:assets';

const brands = (await getCollection("brands")).sort(
    (a, b) => a.data.order - b.data.order,
);
---

<section id="brand" class="py-20 lg:py-32 bg-background">
    <div class="container mx-auto px-4">
        <!-- Section Header -->
        <div class="mb-16">
            <span
                class="inline-block text-primary font-semibold text-sm tracking-[0.2em] uppercase mb-4"
            >
                I Nostri Partner
            </span>
            <h2
                class="text-3xl sm:text-4xl lg:text-5xl font-bold text-foreground mb-6 max-w-3xl"
            >
                Marchi leader nel settore edilizio
            </h2>
            <p class="text-lg text-muted-foreground max-w-3xl leading-relaxed">
                Collaboriamo esclusivamente con i migliori produttori italiani e internazionali per garantire qualità, affidabilità e innovazione.
            </p>
        </div>

        <!-- Brands Grid -->
        <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 gap-6">
            {
                brands.slice(0, 12).map((brand) => (
                    <a href={`/marchi/${brand.slug}`} class="group block">
                        <div class="bg-white border border-border/50 p-6 h-32 flex items-center justify-center hover:border-primary transition-colors">
                            {brand.data.logo && (
                                <Image
                                    src={brand.data.logo}
                                    alt={`Logo ${brand.data.name}`}
                                    width={128}
                                    height={128}
                                    class="max-w-full max-h-full object-contain grayscale group-hover:grayscale-0 transition-all"
                                />
                            )}
                        </div>
                    </a>
                ))
            }
        </div>

        {
            brands.length > 12 && (
                <div class="mt-12">
                    <a
                        href="/marchi"
                        class="inline-flex items-center px-6 py-3 border-2 border-border text-foreground font-medium hover:border-primary hover:text-primary transition-colors"
                    >
                        Vedi tutti i {brands.length} marchi
                    </a>
                </div>
            )
        }
    </div>
</section>
