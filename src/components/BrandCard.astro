---
import type { CollectionEntry } from "astro:content";
import { Image } from 'astro:assets';

interface Props {
  brand: CollectionEntry<"brands">;
  class?: string;
}

const { brand, class: className } = Astro.props;
---

<a
  href={`/marchi/${brand.slug}`}
  class:list={[
    "group block h-full brand-item",
    className,
  ]}
  data-categories={brand.data.categories?.join(",")}
>
  <div class="h-full bg-white border border-border/50 hover:border-primary transition-colors flex flex-col">
    <!-- Logo Section -->
    <div class="p-8 border-b border-border/50 bg-muted/10">
      {
        brand.data.logo && (
          <div class="h-24 flex items-center justify-center">
            <Image
              src={brand.data.logo}
              alt={`Logo ${brand.data.name}`}
              width={160}
              height={96}
              class="max-w-full max-h-full object-contain grayscale group-hover:grayscale-0 transition-all"
            />
          </div>
        )
      }
    </div>
    
    <!-- Content Section -->
    <div class="p-6 flex-grow flex flex-col">
      <h3 class="text-lg font-bold text-foreground mb-3">
        {brand.data.name}
      </h3>
      
      {
        brand.data.categories && brand.data.categories.length > 0 && (
          <div class="flex flex-wrap gap-2 mb-3">
            {brand.data.categories.slice(0, 2).map((category) => (
              <span class="text-xs font-medium text-muted-foreground border-l-2 border-primary pl-2">
                {category}
              </span>
            ))}
            {brand.data.categories.length > 2 && (
              <span class="text-xs font-medium text-muted-foreground">
                +{brand.data.categories.length - 2}
              </span>
            )}
          </div>
        )
      }
      
      <p class="text-sm text-muted-foreground line-clamp-2 mb-4">
        {brand.data.description}
      </p>
      
      <div class="mt-auto">
        <span class="inline-flex items-center gap-2 text-sm font-medium text-primary">
          Scopri i prodotti
          <svg
            class="w-4 h-4"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M17 8l4 4m0 0l-4 4m4-4H3"
            />
          </svg>
        </span>
      </div>
    </div>
  </div>
</a>
