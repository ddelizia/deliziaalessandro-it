---
import {
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
} from "./ui/card";
import type { CollectionEntry } from "astro:content";

interface Props {
  brand: CollectionEntry<"brands">;
  class?: string;
}

const { brand, class: className } = Astro.props;
---

<a
  href={`/marchi/${brand.slug}`}
  class:list={[
    "group block h-full brand-item transition-all duration-300",
    className,
  ]}
  data-categories={brand.data.categories?.join(",")}
>
  <Card
    className="h-full transition-all duration-300 hover:shadow-lg hover:-translate-y-1 border-border/50 hover:border-primary/30 bg-card"
  >
    <CardHeader className="text-center pb-4 pt-8">
      {
        brand.data.logo && (
          <div class="w-32 h-24 mx-auto mb-6 rounded-lg bg-white flex items-center justify-center p-4 border border-border/50 group-hover:border-primary/30 transition-colors">
            <img
              src={brand.data.logo}
              alt={`Logo ${brand.data.name}`}
              class="max-w-full max-h-full object-contain p-2"
            />
          </div>
        )
      }
      <CardTitle
        className="text-xl font-bold group-hover:text-primary transition-colors"
      >
        {brand.data.name}
      </CardTitle>
      {
        brand.data.categories && brand.data.categories.length > 0 && (
          <div class="flex flex-wrap justify-center gap-2 mt-3">
            {brand.data.categories.map((category) => (
              <span class="inline-flex items-center rounded-full border border-border px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 text-foreground">
                {category}
              </span>
            ))}
          </div>
        )
      }
    </CardHeader>
    <CardContent>
      <CardDescription
        className="text-muted-foreground text-center line-clamp-2 mb-4"
      >
        {brand.data.description}
      </CardDescription>
      <div class="text-center">
        <span
          class="inline-flex items-center gap-1 text-sm font-medium text-primary group-hover:underline"
        >
          Vedi dettagli
          <svg
            class="w-4 h-4 transition-transform group-hover:translate-x-1"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"></path>
          </svg>
        </span>
      </div>
    </CardContent>
  </Card>
</a>
