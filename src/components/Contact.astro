---
import { Button } from "./ui/button";
import { Input } from "./ui/input";
import { Textarea } from "./ui/textarea";
---

<section id="contatti" class="py-20 lg:py-32 bg-background">
    <div class="container mx-auto px-4">
        <!-- Section Header -->
        <div class="mb-16 max-w-3xl">
            <span
                class="inline-block text-primary font-semibold text-sm tracking-[0.2em] uppercase mb-4"
            >
                Contatti
            </span>
            <h2
                class="text-3xl sm:text-4xl lg:text-5xl font-bold text-foreground mb-6"
            >
                Richiedi informazioni
            </h2>
            <p class="text-lg text-muted-foreground leading-relaxed">
                Contattaci per preventivi, consulenze o per fissare un appuntamento nel nostro showroom ad Amantea.
            </p>
        </div>

        <div class="grid lg:grid-cols-2 gap-12">
            <!-- Contact Form -->
            <div class="bg-muted/30 border-l-4 border-primary p-8 h-full flex flex-col">
                <h3 class="text-2xl font-bold text-foreground mb-8">
                    Invia una richiesta
                </h3>
                <form class="space-y-6 flex-1 flex flex-col" id="contact-form">
                    <div class="grid sm:grid-cols-2 gap-4">
                        <div>
                            <label
                                for="name"
                                class="block text-sm font-medium text-foreground mb-2"
                                >Nome *</label
                            >
                            <Input
                                id="name"
                                name="name"
                                placeholder="Il tuo nome"
                                required
                                className="w-full"
                            />
                        </div>
                        <div>
                            <label
                                for="phone"
                                class="block text-sm font-medium text-foreground mb-2"
                                >Telefono</label
                            >
                            <Input
                                id="phone"
                                name="phone"
                                type="tel"
                                placeholder="+39 000 000 0000"
                                className="w-full"
                            />
                        </div>
                    </div>
                    <div>
                        <label
                            for="email"
                            class="block text-sm font-medium text-foreground mb-2"
                            >Email *</label
                        >
                        <Input
                            id="email"
                            name="email"
                            type="email"
                            placeholder="la.tua@email.it"
                            required
                            className="w-full"
                        />
                    </div>
                    <div>
                        <label
                            for="subject"
                            class="block text-sm font-medium text-foreground mb-2"
                            >Oggetto</label
                        >
                        <Input
                            id="subject"
                            name="subject"
                            placeholder="Di cosa hai bisogno?"
                            className="w-full"
                        />
                    </div>
                    <div class="flex-1">
                        <label
                            for="message"
                            class="block text-sm font-medium text-foreground mb-2"
                            >Messaggio *</label
                        >
                        <Textarea
                            id="message"
                            name="message"
                            placeholder="Descrivi il tuo progetto o la tua richiesta..."
                            rows={5}
                            required
                            className="w-full resize-none"
                        />
                    </div>
                    <div class="mt-auto space-y-2">
                        <Button
                            client:load
                            type="submit"
                            className="w-full"
                            size="lg"
                        >
                            Invia richiesta
                        </Button>
                        <p
                            class="text-xs text-muted-foreground"
                        >
                            * Campi obbligatori
                        </p>
                    </div>
                </form>
            </div>

            <!-- Contact Info -->
            <div class="space-y-6">
                <!-- Address -->
                <div class="flex gap-4 items-stretch">
                    <div class="w-1 bg-primary shrink-0"></div>
                    <div class="py-1">
                        <h4 class="font-bold text-foreground mb-2">
                            Showroom
                        </h4>
                        <p class="text-muted-foreground leading-relaxed">
                            Località Oliva - Campora S.G.<br />
                            87032 Amantea (CS)
                        </p>
                    </div>
                </div>

                <!-- Phone -->
                <div class="flex gap-4 items-stretch">
                    <div class="w-1 bg-primary shrink-0"></div>
                    <div class="py-1">
                        <h4 class="font-bold text-foreground mb-2">
                            Telefono
                        </h4>
                        <a
                            href="tel:+39098248400"
                            class="text-muted-foreground hover:text-primary transition-colors text-lg"
                        >
                            +39 0982 48400
                        </a>
                    </div>
                </div>

                <!-- Email -->
                <div class="flex gap-4 items-stretch">
                    <div class="w-1 bg-primary shrink-0"></div>
                    <div class="py-1">
                        <h4 class="font-bold text-foreground mb-2">
                            Email
                        </h4>
                        <a
                            href="mailto:info@deliziaalessandro.it"
                            class="text-muted-foreground hover:text-primary transition-colors"
                        >
                            info@deliziaalessandro.it
                        </a>
                    </div>
                </div>

                <!-- Hours -->
                <div class="flex gap-4 items-stretch">
                    <div class="w-1 bg-primary shrink-0"></div>
                    <div class="py-1">
                        <h4 class="font-bold text-foreground mb-2">
                            Orari di apertura
                        </h4>
                        <div class="text-muted-foreground space-y-1 text-sm">
                            <p>
                                <span class="font-medium text-foreground"
                                    >Lunedì - Venerdì</span
                                ><br />08:00 - 13:00 / 15:00 - 19:00
                            </p>
                            <p>
                                <span class="font-medium text-foreground"
                                    >Sabato</span
                                ><br />08:00 - 13:00
                            </p>
                            <p class="text-muted-foreground/70">
                                Domenica: Chiuso
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Map -->
                <div class="border border-border/50 bg-muted/30 p-6 mt-8">
                    <div class="flex items-start gap-4 mb-4">
                        <svg
                            class="w-6 h-6 text-primary shrink-0"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                            ></path>
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        <div>
                            <h4 class="font-bold text-foreground mb-1">
                                Come raggiungerci
                            </h4>
                            <p class="text-sm text-muted-foreground mb-3">
                                Ampio parcheggio gratuito disponibile
                            </p>
                        </div>
                    </div>
                    <a
                        href="https://www.google.com/maps/place/Delizia+Alessandro+Srl/@39.0792913,16.0874106,691m/data=!3m1!1e3!4m6!3m5!1s0x133fc3bfd4efc9b7:0x8abe2d7dcc3f68fa!8m2!3d39.0797515!4d16.0875574!16s%2Fg%2F1vntxtw6?entry=ttu&g_ep=EgoyMDI1MTIwNy4wIKXMDSoASAFQAw%3D%3D"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-primary-foreground font-medium hover:bg-primary/90 transition-colors w-full justify-center"
                    >
                        Apri in Google Maps
                        <svg
                            class="w-4 h-4"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                            ></path>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
