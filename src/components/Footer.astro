---
import { Separator } from "./ui/separator";
import { Image } from "astro:assets";

const currentYear = new Date().getFullYear();

const footerLinks = {
    servizi: [
        { label: "Materiale Edile", href: "/#servizi" },
        { label: "Arredobagno", href: "/#servizi" },
        { label: "Finiture", href: "/#servizi" },
        { label: "Noleggio Attrezzature", href: "/#servizi" },
        { label: "Consegna in Cantiere", href: "/#servizi" },
    ],
    azienda: [
        { label: "Chi Siamo", href: "/#chi-siamo" },
        { label: "Showroom", href: "/#showroom" },
        { label: "Blog", href: "/blog" },
        { label: "Contatti", href: "/#contatti" },
    ],
    contatti: [
        { label: "+39 0982 48400", href: "tel:+39098248400" },
        {
            label: "info@deliziaalessandro.it",
            href: "mailto:info@deliziaalessandro.it",
        },
        {
            label: "Località Oliva - Campora S.G., 87032 Amantea (CS)",
            href: "https://www.google.com/maps/place/Delizia+Alessandro+Srl/@39.0792913,16.0874106,691m/data=!3m1!1e3!4m6!3m5!1s0x133fc3bfd4efc9b7:0x8abe2d7dcc3f68fa!8m2!3d39.0797515!4d16.0875574!16s%2Fg%2F1vntxtw6?entry=ttu&g_ep=EgoyMDI1MTIwNy4wIKXMDSoASAFQAw%3D%3D",
        },
    ],
};
---

<footer class="bg-secondary text-secondary-foreground">
    <div class="container mx-auto px-4 py-16">
        <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-12">
            <!-- Brand -->
            <div class="sm:col-span-2 lg:col-span-1">
                <a href="/" class="flex items-center gap-3 mb-6">
                    <Image
                        src="/images/logo-deliziaalessandro.svg"
                        alt="Delizia Alessandro S.r.l."
                        width={128}
                        height={128}
                        class="h-12 w-auto object-contain bg-white rounded-lg p-1"
                    />
                </a>
                <p
                    class="text-secondary-foreground/70 text-sm leading-relaxed mb-6"
                >
                    Dal 1950, il tuo punto di riferimento per materiali edili,
                    arredobagno e finiture di qualità ad Amantea e in tutta la
                    provincia di Cosenza.
                </p>
                <div class="flex items-center gap-2">
                    <span class="text-xs text-secondary-foreground/50"
                        >Affiliazioni:</span
                    >
                    <span
                        class="text-xs font-medium text-secondary-foreground/70"
                        >Gruppo MADE</span
                    >
                    <span class="text-xs text-secondary-foreground/50">•</span>
                    <span
                        class="text-xs font-medium text-secondary-foreground/70"
                        >Gruppo Delta</span
