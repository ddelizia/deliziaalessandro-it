---
import { Separator } from "./ui/separator";

const currentYear = new Date().getFullYear();

const footerLinks = {
    servizi: [
        { label: "Materiale Edile", href: "#servizi" },
        { label: "Arredobagno", href: "#servizi" },
        { label: "Finiture", href: "#servizi" },
        { label: "Noleggio Attrezzature", href: "#servizi" },
        { label: "Consegna in Cantiere", href: "#servizi" },
    ],
    azienda: [
        { label: "Chi Siamo", href: "#chi-siamo" },
        { label: "Showroom", href: "#showroom" },
        { label: "Blog", href: "/blog" },
        { label: "Contatti", href: "#contatti" },
    ],
    contatti: [
        { label: "+39 0982 421234", href: "tel:+390982421234" },
        {
            label: "info@deliziaalessandro.it",
            href: "mailto:info@deliziaalessandro.it",
        },
        {
            label: "Via G. Mazzini, 62/66",
            href: "https://maps.google.com/?q=Via+Giuseppe+Mazzini+62+Amantea",
        },
        {
            label: "87032 Amantea (CS)",
            href: "https://maps.google.com/?q=Via+Giuseppe+Mazzini+62+Amantea",
        },
    ],
};
---

<footer class="bg-secondary text-secondary-foreground">
    <div class="container mx-auto px-4 py-16">
        <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-12">
            <!-- Brand -->
            <div class="sm:col-span-2 lg:col-span-1">
                <a href="/" class="flex items-center gap-3 mb-6">
                    <div
                        class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center"
                    >
                        <span class="text-primary-foreground font-bold text-xl"
                            >DA</span
                        >
                    </div>
                    <div>
                        <span
                            class="font-bold text-lg text-secondary-foreground"
                            >Delizia Alessandro</span
                        >
                        <span class="block text-xs text-secondary-foreground/60"
                            >S.r.l.</span
                        >
                    </div>
                </a>
                <p
                    class="text-secondary-foreground/70 text-sm leading-relaxed mb-6"
                >
                    Dal 1950, il tuo punto di riferimento per materiali edili,
                    arredobagno e finiture di qualità ad Amantea e in tutta la
                    provincia di Cosenza.
                </p>
                <div class="flex items-center gap-2">
                    <span class="text-xs text-secondary-foreground/50"
                        >Affiliazioni:</span
                    >
                    <span
                        class="text-xs font-medium text-secondary-foreground/70"
                        >Gruppo MADE</span
                    >
                    <span class="text-xs text-secondary-foreground/50">•</span>
                    <span
                        class="text-xs font-medium text-secondary-foreground/70"
                        >Gruppo Delta</span
                    >
                </div>
            </div>

            <!-- Services -->
            <div>
                <h4 class="font-bold text-secondary-foreground mb-4">
                    Servizi
                </h4>
                <ul class="space-y-3">
                    {
                        footerLinks.servizi.map((link) => (
                            <li>
                                <a
                                    href={link.href}
                                    class="text-sm text-secondary-foreground/70 hover:text-primary transition-colors"
                                >
                                    {link.label}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <!-- Company -->
            <div>
                <h4 class="font-bold text-secondary-foreground mb-4">
                    Azienda
                </h4>
                <ul class="space-y-3">
                    {
                        footerLinks.azienda.map((link) => (
                            <li>
                                <a
                                    href={link.href}
                                    class="text-sm text-secondary-foreground/70 hover:text-primary transition-colors"
                                >
                                    {link.label}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <!-- Contact -->
            <div>
                <h4 class="font-bold text-secondary-foreground mb-4">
                    Contatti
                </h4>
                <ul class="space-y-3">
                    {
                        footerLinks.contatti.map((link) => (
                            <li>
                                <a
                                    href={link.href}
                                    target={
                                        link.href.startsWith("http")
                                            ? "_blank"
                                            : undefined
                                    }
                                    rel={
                                        link.href.startsWith("http")
                                            ? "noopener noreferrer"
                                            : undefined
                                    }
                                    class="text-sm text-secondary-foreground/70 hover:text-primary transition-colors"
                                >
                                    {link.label}
                                </a>
                            </li>
                        ))
                    }
                </ul>

                <!-- Opening hours -->
                <div class="mt-6 pt-4 border-t border-secondary-foreground/10">
                    <p class="text-xs text-secondary-foreground/50 mb-2">
                        Orari
                    </p>
                    <p class="text-sm text-secondary-foreground/70">
                        Lun-Ven: 08:00-19:00
                    </p>
                    <p class="text-sm text-secondary-foreground/70">
                        Sab: 08:00-13:00
                    </p>
                </div>
            </div>
        </div>

        <Separator className="my-8 bg-secondary-foreground/10" />

        <!-- Bottom bar -->
        <div
            class="flex flex-col sm:flex-row items-center justify-between gap-4"
        >
            <p class="text-sm text-secondary-foreground/50">
                © {currentYear} Delizia Alessandro S.r.l. Tutti i diritti riservati.
            </p>
            <div
                class="flex items-center gap-4 text-sm text-secondary-foreground/50"
            >
                <a
                    href="#"
                    class="hover:text-secondary-foreground transition-colors"
                    >Privacy Policy</a
                >
                <span>•</span>
                <a
                    href="#"
                    class="hover:text-secondary-foreground transition-colors"
                    >Cookie Policy</a
                >
                <span>•</span>
                <span>P.IVA 00000000000</span>
            </div>
        </div>
    </div>
</footer>
