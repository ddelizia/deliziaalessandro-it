---
import { buttonVariants } from "./ui/button";
import { cn } from "@/lib/utils";
import { getCollection } from "astro:content";

const categories = (await getCollection("categories")).sort((a, b) =>
    a.data.name.localeCompare(b.data.name),
);

// Function to get image path based on slug
const getImagePath = (slug: string) => {
    // Handle special cases where slug doesn't match image filename
    const imageMap: Record<string, string> = {
        "parquet-e-laminati": "parquet.jpg",
        "collanti-e-materiali-tecnici": "collanti.jpg",
        "infissi": "infissi.jpeg",
    };
    
    if (imageMap[slug]) {
        return `/images/categories/${imageMap[slug]}`;
    }
    return `/images/categories/${slug}.jpg`;
};
---

<section id="servizi" class="py-20 lg:py-32 bg-background">
    <div class="container mx-auto px-4">
        <!-- Products Section -->
        <div class="text-center mb-16">
            <span
                class="inline-block text-primary font-semibold text-sm tracking-[0.2em] uppercase mb-4"
            >
                I Nostri Prodotti
            </span>
            <h2
                class="text-3xl sm:text-4xl lg:text-5xl font-bold text-foreground mb-6"
            >
                Materiali di qualità per ogni tuo progetto
            </h2>
            <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                Una vasta selezione di prodotti delle migliori marche per
                costruire, ristrutturare e arredare.
            </p>
        </div>

        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
            {
                categories.slice(0, 6).map((category) => (
                    <a
                        href={`/categorie/${category.slug}`}
                        class="group block relative overflow-hidden aspect-[4/3] bg-muted"
                    >
                        <img
                            src={getImagePath(category.slug)}
                            alt={category.data.name}
                            class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                        />
                        <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent" />
                        <div class="absolute inset-0 p-6 flex flex-col justify-end">
                            <h3 class="text-white text-2xl font-bold mb-2 group-hover:text-primary transition-colors">
                                {category.data.name}
                            </h3>
                            <p class="text-white/90 text-sm line-clamp-2 mb-4">
                                {category.data.description}
                            </p>
                            <div class="flex items-center text-white font-medium text-sm group-hover:gap-3 gap-2 transition-all">
                                Scopri di più
                                <svg
                                    class="w-4 h-4"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    stroke-width="2"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        d="M17 8l4 4m0 0l-4 4m4-4H3"
                                    />
                                </svg>
                            </div>
                        </div>
                    </a>
                ))
            }
        </div>

        {
            categories.length > 6 && (
                <div class="text-center mb-24">
                    <a
                        href="/categorie"
                        class={cn(
                            buttonVariants({
                                variant: "outline",
                                size: "lg",
                            }),
                            "px-8 border-2",
                        )}
                    >
                        Vedi tutte le categorie
                    </a>
                </div>
            )
        }
    </div>
</section>
