---
import { Button } from './ui/button';
---

<section class="relative min-h-screen flex items-center overflow-hidden bg-background">
  <!-- Background Images Grid -->
  <div class="absolute inset-0 z-0">
    <!-- Main large image -->
    <div class="absolute inset-0 grid grid-cols-3 gap-0">
      <div class="relative overflow-hidden">
        <img 
          src="/images/categories/pavimenti-e-rivestimenti.jpg" 
          alt="Pavimenti e rivestimenti"
          class="absolute inset-0 w-full h-full object-cover"
        />
      </div>
      <div class="relative overflow-hidden">
        <img 
          src="/images/categories/mobili-bagno.jpg" 
          alt="Mobili bagno"
          class="absolute inset-0 w-full h-full object-cover"
        />
      </div>
      <div class="relative overflow-hidden">
        <img 
          src="/images/categories/rubinetteria.jpg" 
          alt="Rubinetteria"
          class="absolute inset-0 w-full h-full object-cover"
        />
      </div>
    </div>
    <!-- Dark overlay -->
    <div class="absolute inset-0 bg-black/70"></div>
  </div>

  <div class="container mx-auto px-4 relative z-10 py-32 lg:py-40">
    <div class="max-w-5xl">
      <!-- Year Badge -->
      <div class="inline-block bg-primary px-4 py-2 mb-6">
        <span class="text-sm font-bold text-primary-foreground tracking-wider">DAL 1950</span>
      </div>

      <!-- Main heading -->
      <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-white mb-6 leading-tight">
        Materiali di qualit√†<br />
        per costruire il futuro
      </h1>

      <!-- Subtitle -->
      <p class="text-xl sm:text-2xl text-white/90 mb-8 max-w-3xl leading-relaxed">
        Il tuo punto di riferimento per <strong class="font-semibold">materiali edili</strong>, <strong class="font-semibold">arredobagno</strong> e <strong class="font-semibold">finiture</strong> ad Amantea, Cosenza.
      </p>

      <!-- Key features -->
      <div class="grid sm:grid-cols-3 gap-6 mb-10 max-w-3xl">
        <div class="flex items-start gap-3">
          <div class="w-1 h-12 bg-primary shrink-0"></div>
          <div>
            <div class="text-white font-bold text-lg mb-1">70+ anni</div>
            <div class="text-white/80 text-sm">di esperienza</div>
          </div>
        </div>
        <div class="flex items-start gap-3">
          <div class="w-1 h-12 bg-primary shrink-0"></div>
          <div>
            <div class="text-white font-bold text-lg mb-1">50+ marchi</div>
            <div class="text-white/80 text-sm">leader di settore</div>
          </div>
        </div>
        <div class="flex items-start gap-3">
          <div class="w-1 h-12 bg-primary shrink-0"></div>
          <div>
            <div class="text-white font-bold text-lg mb-1">Showroom</div>
            <div class="text-white/80 text-sm">1000+ mq espositivi</div>
          </div>
        </div>
      </div>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row items-start gap-4">
        <a href="#servizi">
          <Button client:load size="lg" className="text-base px-8 py-6 bg-primary hover:bg-primary/90 text-primary-foreground">
            Scopri i prodotti
          </Button>
        </a>
        <a href="#contatti">
          <Button client:load size="lg" className="text-base px-8 py-6 border-2 border-white bg-transparent text-white hover:bg-white hover:text-foreground">
            Contatta lo showroom
          </Button>
        </a>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-10 hidden lg:block">
    <a href="#servizi" class="flex flex-col items-center gap-2 text-white/60 hover:text-white transition-colors">
      <span class="text-xs font-medium uppercase tracking-wider">Scorri per esplorare</span>
      <svg class="w-5 h-5 animate-bounce" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </a>
  </div>
</section>
